<div class="container">
    
	<div class="row" ng-show="configList">
	
		<table class="table table-striped">
	    	<tbody>
		      <tr ng-repeat="config in configDetailsList">
		        <td>{{config.Id}}</td>
		        <td>{{config.Title}}</td>
		        <td>{{config.Keywords}}</td>
		        <td><button type="button" class="btn btn-default btn-block" ng-click="search(config.Keywords)">Search</button></td>
		      </tr>
		    </tbody>
	  	</table>    
	  
	</div>
	

	<div class="row" ng-show="resumeList">
	
		<table class="table table-striped">
	    	<tbody>
		      <tr ng-repeat="resume in filesList">
		        <td>{{resume.Name}}</td>
		        <td><button type="button" class="btn btn-default btn-block" ng-click="download(resume.Name)">Download</button></td>
		      </tr>
		    </tbody>
	  	</table>    
	  
	</div>
    
</div>
    

    <!-- jQuery -->
